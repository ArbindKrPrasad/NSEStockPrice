                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:text="High"
                    android:textSize="25dp"
                    android:paddingTop="12dp"
                    android:textColor="#4f4d4d"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/tvHigh"
